{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Verbose",
        "System": "Verbose"
      }
    },
    "Using": [ "Serilog.Sinks.Async", "Serilog.Sinks.File", "Serilog.Sinks.Console" ],
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "controlLevelSwitch": "$consoleSwitch",
          "configure": [
            {
              "Name": "Console",
              "Args": {
                "outputTemplate": "{Timestamp:HH:mm:ss} [{TraceId}] - [{Level:u3}] {SourceContext} - {Message:lj}{NewLine}{Exception}",
                "restrictedToMinimumLevel" : "Information"
              }
            },
            {
              "Name": "File",
              "Args": {
                "path": "D:/Logs/CleanProjectTemplate/Text/log-.log",
                "rollingInterval": "Hour",
                "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{TraceId}:{SpanId}] - [{Level:u3}] {SourceContext}  {Message:lj}{NewLine}{Exception}",
                "buffered": false,
                "retainedFileCountLimit": null,
                "rollOnFileSizeLimit": true,
                "flushToDiskInterval": null
              }
            },
            {
              "Name": "File",
              "Args": {
                "path": "D:/Logs/CleanProjectTemplate/Json/JsonLog-.log",
                "rollingInterval": "Hour",
                "retainedFileCountLimit": null,
                "buffered": false,
                "formatter": {
                  "type": "Serilog.Formatting.Json.JsonFormatter, Serilog",
                  "renderMessage": true
                }
              }
            }
          ],
          "bufferSize": 10000,
          "blockWhenFull": true
        }
      }
    ]
  }
}
